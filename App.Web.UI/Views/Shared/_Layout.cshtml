<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Assets/css/components.css">
    <link rel="stylesheet" href="~/Assets/css/responsee.css">
    <link rel="stylesheet" href="~/Assets/_plugin/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="~/Assets/_plugin/owl-carousel/owl.theme.css">  

    <!-- CUSTOM STYLE -->
    <link rel="stylesheet" href="~/Assets/css/template-style.css">
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/ui/1.7.0/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/modernizr.js"></script>
    <script type="text/javascript" src="~/Assets/js/responsee.js"></script>
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    

    @RenderSection("css", false)
</head>
<body>
    <div id="main" class="container">
        
        @Html.Partial("Menu")
        
        <section style="overflow: hidden;">
            @RenderBody()
        </section>

        <hr>

        <div class="footer">
        </div>

    </div> <!-- /container -->
    @RenderSection("script", false)


    <script type="text/javascript" src="~/Assets/_plugin/owl-carousel/owl.carousel.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                slideSpeed: 300,
                autoPlay: true,
                navigation: false,
                pagination: false,
                singleItem: true
            });
            $("#owl-demo2").owlCarousel({
                slideSpeed: 300,
                autoPlay: true,
                navigation: false,
                pagination: true,
                singleItem: true
            });
        });
        var checkScroll = false;
        $(window).scroll(function () {
            if ($(window).scrollTop() > 50 && !checkScroll) {
                $("#logo_img").attr("src", "/Assets/img/logo_l.png");
                $("#logo_img").css("width", "80%");
                $(".l-2").css("height", "55px");
                $("li.logo a").css({ "height": "55px", "line-height": "1em" });
                $("li.logo a img").css("margin-top", "-7px");
                checkScroll = true;
            }
            else if ($(window).scrollTop() < 50 && checkScroll) {
                $("#logo_img").attr("src", "/Assets/img/logo.png");
                $(".l-2").css("height", "intial");
                $("li.logo a").css({ "height": "", "line-height": "intial" });
                $("li.logo a img").css({ "margin-top": "0px", "width": "60%" });
                checkScroll = false;
            }
        });

    </script> 
</body>
</html>
